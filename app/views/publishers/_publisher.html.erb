<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="active" width="30%"><%= t ".name" %></th>
          <th class="text-center active" width="40%"><%= t ".address" %></th>
          <% if current_user.admin? %>
            <th class="text-right active"><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @publishers.each do |publisher| %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <td width="30%">
            <%= link_to publisher.name, publisher %>
          </td>
          <td class="text-center" width="40%">
            <%= publisher.address %>
          </td>
          <% if current_user.admin? %>
            <td class="text-right">
              <%= link_to t(".delete"), publisher,
                method: :delete, data: {confirm: t(".confirm")} %>
                | <%= link_to t(".edit"), edit_publisher_path(publisher) %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
<% end %>
