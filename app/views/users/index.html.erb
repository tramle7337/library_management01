<% provide(:title, t(".title")) %>
<h1><%= t(".title") %></h1>

<div>
  <%= t ".download" %>
  <%= link_to t(".excel"), users_path(format: "xls") %>
</div><hr>

<div class="input-group search_inline">
  <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :search, params[:search],
      placeholder: t(".search"), class: "form-control search_input" %>
      <%= label_tag :admin %>
      <%= radio_button_tag :role, "1", true, class: "btn_auto" %>
      <%= label_tag :user %>
      <%= radio_button_tag :role, "0", true, class: "btn_auto" %>
    <%= submit_tag t(".button_search"), name: nil,
      class: "btn btn-primary btn_search btn_auto" %><i class="fa fa-search fa-fw"></i>
  <% end %>
</div>
</br><hr>

<ul class="users">
  <%= render "user" %>
</ul>

