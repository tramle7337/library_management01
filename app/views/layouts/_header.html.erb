<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".library_app"), root_path, id: "logo" %>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t(".book"), admin_books_path %></li>
            <li><%= link_to t(".author"), admin_authors_path %></li>
            <li><%= link_to t(".category"), admin_categories_path %></li>
            <li><%= link_to t(".publisher"), admin_publishers_path %></li>
            <li><%= link_to t(".users"), admin_users_path %></li>
            <li><%= link_to t(".my_requests"), requests_path %></li>
            <li><%= link_to t(".manage_request"), admin_requests_path %></li>
          <% else %>
            <li><%= link_to t(".author"), authors_path %></li>
            <li><%= link_to t(".category"), categories_path %></li>
            <li><%= link_to t(".publisher"), publishers_path %></li>
            <li><%= link_to t(".users"), users_path %></li>
            <li><%= link_to t(".my_requests"), requests_path %></li>
          <% end %>
        <% else %>
          <li><%= link_to t(".author"), authors_path %></li>
          <li><%= link_to t(".category"), categories_path %></li>
          <li><%= link_to t(".publisher"), publishers_path %></li>
        <% end %>
      </ul>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li class="cart-text"><%= render "layouts/cart_text" %><li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".account") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".settings"), edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".login"), new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
