<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="active" width="30%"><%= t ".name" %></th>
          <th class="text-center active" width="40%"><%= t ".profile" %></th>
          <% if current_user.admin? %>
            <th class="text-right active"><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @authors.each do |author| %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <td width="30%">
            <%= link_to author.name, author %>
          </td>
          <td class="text-center" width="40%">
            <%= author.profile %>
          </td>
          <% if current_user.admin? %>
          <td class="text-right">
            <%= link_to t(".delete"), author,
              method: :delete, data: {confirm: t(".confirm")} %>
              | <%= link_to t(".edit"), edit_author_path(author) %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
<% end %>
